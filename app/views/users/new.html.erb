<h1>New User</h1>
<%= form_for @user do |f| %>
  <%= f.text_field 'first_name', :placeholder => 'First Name' %> 
  <%= f.text_field 'last_name', :placeholder => 'Last Name' %> 
  <%= f.text_field 'email', :placeholder => 'Email' %>
  <%= f.password_field 'password', :placeholder => 'Password' %>
  <% if @invited_params %>
    <%= fields_for 'invited' do |inv| %> 
      <%= inv.hidden_field 'invite_id', :value => @invited_params[:invite_id] %>
      <%= inv.hidden_field 'token', :value => @invited_params[:token] %>
    <% end %>
  <% end %> 
  <%= f.submit 'Sign Up' %> 
<% end %>
